brand_catalog_mapping_file=${brand_catalog_mapping_file}

elasticsearch_host=${docker_address}
elasticsearch_port=9200
elasticsearch_scheme=http
elasticsearch_socket_timeout_ms=3000
elasticsearch_connection_timeout_ms=1000
elasticsearch_connection_request_timeout_ms=1000

elasticsearch_index_name=${elasticsearch_index_name}
elasticsearch_index_alias_name=pms

sink_retries=5
sink_delay_ms=50
sink_timeout_ms=500

kafka_metrics_schedule: ${kafka_metrics_schedule}

kafka_cluster_bootstrap_server_urls=${docker_address}:9092
kafka_cluster_schema_registry_url=http://${docker_address}:8081
kafka_stream_threads=1
kafka_auto_offset_reset=earliest
kafka_streams_replication_factor=1
kafka_application_id=streams-product-master-sink-aat
kafka_client_id=streams-client
kafka_retries=25
kafka_retry_backoff_ms=200
kafka_max_in_flight_requests_per_connection=1
kafka_commit_interval_ms=1000
kafka_security_protocol=PLAINTEXT

kafka_product_master_topic_name=${kafka_product_master_topic_name}

kafka_ignore_deserialization_errors=false
kafka_clear_state_stores_before_start=false

http_server_port=${server_port}
main_boot_jar=${main_boot_jar}
jacoco_jvm_args=${jacoco_jvm_args}
management.endpoint.shutdown.enabled=true
management.endpoints.web.exposure.include=info,health,shutdown,prometheus,loggers
